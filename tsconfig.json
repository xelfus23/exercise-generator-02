{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "jsx": "react",
        "strict": true,
        "paths": {
            "@/*": ["./*"]
        },
        "esModuleInterop": true,
        // Add these lines to override the base config:
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "esnext",

        // Keep these existing settings:
        "skipLibCheck": true,    // Add this if you're still facing type errors
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        ".expo/types/**/*.ts",
        "expo-env.d.ts",
        "src/assets/data/dummy.ts",
        "src/services/api/test.js",
        "nativewind-env.d.ts"
    ]
}